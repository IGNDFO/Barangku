<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:elevation="10dp"
    android:background="@color/white">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_close"
            android:layout_margin="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DETAIL KLIEN"
            android:textAlignment="center"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/tv_nama_klien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Klien"
            android:textSize="20sp"
            android:padding="5dp"
            android:drawableStart="@drawable/ic_person"/>
        <TextView
            android:id="@+id/tv_alamat_klien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat Klien"
            android:textSize="20sp"
            android:padding="5dp"
            android:drawableStart="@drawable/ic_lokasi"/>
        <TextView
            android:id="@+id/tv_telp_klien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No. Telp"
            android:textSize="20sp"
            android:padding="5dp"
            android:drawableStart="@drawable/ic_telephone"/>
        <TextView
            android:id="@+id/tv_email_klien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Klien"
            android:textSize="20sp"
            android:padding="5dp"
            android:drawableStart="@drawable/ic_email_tag"/>
        <TextView
            android:id="@+id/tv_catatan_klien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Catatan Klien"
            android:textSize="20sp"
            android:padding="5dp"
            android:drawableStart="@drawable/ic_catatan"/>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/btn_edit_klien"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="Edit"/>
            <Button
                android:id="@+id/btn_hapus_klien"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Hapus"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>