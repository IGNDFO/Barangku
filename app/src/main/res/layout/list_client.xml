<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="@color/background_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:background="@android:color/transparent"
        android:visibility="gone"
        android:textSize="21sp"
        android:paddingLeft="7dp"/>

    <TextView
        android:id="@+id/tv_nama_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Client"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingLeft="7dp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tv_alamat_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat Client"
        android:textSize="16sp"
        android:textColor="@color/mid_black"
        android:paddingLeft="7dp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tv_telp_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nomor Client"
        android:textSize="16sp"
        android:textColor="@color/mid_black"
        android:paddingLeft="7dp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Client"
        android:textSize="16sp"
        android:textColor="@color/mid_black"
        android:paddingLeft="7dp"
        android:layout_marginBottom="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
