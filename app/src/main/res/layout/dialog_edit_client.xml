<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:elevation="10dp"
    android:background="#A974E8">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#944A148C">
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_close"
            android:layout_margin="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Klien"
            android:textAlignment="center"
            android:textSize="30sp"/>

        <EditText
            android:id="@+id/et_nama_klien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Klien"/>
        <EditText
            android:id="@+id/et_alamat_klien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alamat"/>
        <EditText
            android:id="@+id/et_telp_klien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No. Telp"
            android:inputType="number"/>
        <EditText
            android:id="@+id/et_email_klien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Klien"
            android:inputType="textEmailAddress"/>
        <EditText
            android:id="@+id/et_catatan_klien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Catatan Klien"/>
        <Button
            android:id="@+id/btn_simpan_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simpan"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>