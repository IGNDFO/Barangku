<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A974E8">

    <include
        layout="@layout/toolbar"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="4dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/iv_gambar_barang"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/insert_image"
                android:layout_gravity="center"
                android:contentDescription="Gambar Barang"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Keluar"
                android:layout_marginTop="16dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#D6CECE"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_tanggal_keluar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="20sp"
                    android:textColor="#D6CECE"/>

                <ImageView
                    android:id="@+id/iv_kalender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_calendar"
                    android:layout_marginStart="8dp"
                    android:contentDescription="Kalender"/>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_marginTop="16dp">

                <AutoCompleteTextView
                    android:id="@+id/et_nama_barang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:hint="Nama Barang"
                    android:textColor="@color/text_primary" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_marginTop="16dp">

                <AutoCompleteTextView
                    android:id="@+id/et_nama_klien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:hint="Nama Klien"
                    android:textColor="@color/text_primary" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="19sp"
                        android:text="Alamat Klien: "
                        android:layout_marginEnd="8dp"
                        android:textColor="@color/text_primary"/>

                    <TextView
                        android:id="@+id/tv_alamat_client"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="19sp"
                        android:textColor="#D6CECE"/>
                </LinearLayout>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_cari_barang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cari"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/button_primary"
                android:textColor="#E6DFDF"/>
            
            <EditText
                android:id="@+id/et_keterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Keterangan"
                android:layout_marginTop="16dp"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/et_jumlah_barang"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Jumlah Barang Keluar"
                android:layout_marginTop="16dp"
                android:textColor="@color/text_primary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:text="Total Barang: "
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/text_primary"/>

                <TextView
                    android:id="@+id/tv_jumlah_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:textColor="#D6CECE"/>

                <TextView
                    android:id="@+id/tv_satuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Satuan Barang"
                    android:textSize="19sp"
                    android:layout_marginStart="8dp"
                    android:textColor="#D6CECE"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_simpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simpan"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/button_primary"
                android:textColor="#E6DFDF"/>

            <TextView
                android:id="@+id/tv_nama_barang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Nama Barang"
                android:visibility="gone"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>

</LinearLayout>
